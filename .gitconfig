[alias]
	c = commit -v
	a = add -p
	rhh = reset --hard HEAD
	bn = branch --show-current
	l = log --oneline --branches --decorate --graph
	b = branch
	s = status --short --branch
	st = status --show-stash
	co = checkout
	d = diff --patch --word-diff=color --minimal --stat
	ds = diff --staged --word-diff=color
	ff = fetch origin development
	jk = commit --amend --no-edit
	update = "pull --rebase --autostash origin development"
	conflicted = !vim +Conflicted
	aliases = "!f() { git config --global -l | grep alias | sort; }; f"
	authors-list = shortlog -e -s -n
	smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
	me = "!git smartlog --author='John Regner'"
	revertfile = checkout --
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^

[help]
	autocorrect = prompt

[rerere]
	enabled = 1

[branch]
	autosetuprebase = always

[color]
	ui = true
	wtf = true

[color "diff"]
	meta = 227
	frag = magenta bold
	func = blue
	old = red bold
	new = green bold
	commit = 227 bold
	whitespace = red reverse
	context = normal

[color "diff-hilight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = cyan
	local = blue
	remote = magenta
	upstream = magenta
	plain = normal

[color "status"]
	header = black bold
	branch = cyan
	nobranch = red
	unmerged = red
	untracked = cyan
	added = green
	changed = red bold

[diff]
	tool = vimdiff
	mnemonicprefix = true
	indentHeuristic = true
	colorMoved = zebra
	noprefix = true

[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"
	binary = false

[core]
	editor = vim
	whitespace = warn
	excludesfile = ~/.gitignore

[fetch]
	prune = true

[push]
	default = current
	ff = only

[pull]
	ff = only
	rebase = true

[merge]
	tool = vimdiff
	ff = only

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[commit]
	gpgsign = true
	verbose = true
	template = ~/.gitmessage

[stash]
	showPatch = true

[gpg]
	program = /usr/local/bin/gpg

# use git-delta (installed via homebrew)
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Monokai Extended
	navigate = true

[interactive]
	diffFilter = delta --color-only

[remote "origin"]
	prune = true
	pruneTags = true

[rebase]
	autosquash = true

[difftool]
	prompt = false

[maintenance]
	repo = /Users/j0r010l/dev/glass-app

[init]
	defaultBranch = main
