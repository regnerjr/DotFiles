# Easier navigation: .., ...
alias ..="cd .."
alias ...="cd ../.."

# Shortcuts
alias h="history"
alias j="jobs"
alias v="vim"

# Grep always in color
alias grep='grep --color=auto'                 # show differences in colour
alias egrep='egrep --color=auto'               # show differences in colour
alias fgrep='fgrep --color=auto'               # show differences in colour
if [[ "$SHELL" =~ "zsh" ]] ; then 
	alias -g G='| grep'
	alias -g L="| less"
	alias -g LL="2>&1 | less"
fi

# Detect which `ls` flavor is in use
ls --color -d . &>/dev/null 2>&1 && colorflag="--color" || colorflag="-G"

# List all files colorized in long format
alias l="ls -AlBF ${colorflag}"
# List all files colorized in long format, including dot files
alias ll="ls -lABF ${colorflag}"
# List only directories
alias lsd='ls -l ${colorflag} | grep "^d"'
# List all in 1 column, with a clear
alias cl='clear;ls -al1'

# Always use color output for `ls`
alias ls="command ls ${colorflag}"
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

#Generate etags file
alias gentags="find . -type f -iregex \".*\.[chS]\(pp\)?\" | xargs etags -a"

#SVN aliases
alias st='svn status'
alias co='svn checkout'
alias ci='svn commit'
alias up='svn update'
   # show detailed svn logs for past dates
alias sl2='svn log -r {$(date --date="2 weeks ago" +%F)}:HEAD -v -g'
alias sl1='svn log -r {$(date --date="1 week ago" +%F)}:HEAD -v -g'
alias s2='svn log -r {$(date --date="3 days ago" +%F)}:HEAD -v -g'
#git aliases
alias g=git
alias gg='git log --decorate --oneline --graph'

# zsh aliases
alias zshrc="vim ~/.zshrc"
#Send a message that aliases were loaded
echo --==++__Aliases Loaded__++==--
